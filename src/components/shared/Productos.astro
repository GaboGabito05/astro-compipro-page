    ))}
    {productosExtra.map((producto, index) => (
      <div class="product-card extra-product">
        <div class="product-image">
          <img src={producto.src} alt={producto.nombre} class="placeholder-img" />
        </div>
        <h3>{producto.nombre}</h3>
