<style is:inline>
    .text-seccion {
    max-width: 1062px;
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 18px;
}

.contenedor {
    display: grid;
    justify-content: center;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    padding: 0px 10%;
    width: 100%;
}

.circle {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 32px;
    border-radius: 16px;
    gap: 20px;
}

.icono {
    width: 100%;
    max-width: 200px;
    height: auto;
}

.texto {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    color: #4b5563;
    width: 100%;
    max-width: 190px;
}

.negrita {
    font-weight: 700;
}

@media (max-width: 768px) {
    .contenedor {
        grid-template-columns: 1fr;
    }

    .circle {
        padding: 16px;
    }

    .texto {
        font-size: 14px;
    }
}
</style>

