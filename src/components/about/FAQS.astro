---
import '../../styles/FAQS.css';

const data = [
    {
        "title": "FAQs",
        "content1": "Aquí encontrarás respuestas a las preguntas más comunes sobre nuestros servicios y empresa. Si no encuentras lo que buscas, no dudes en contactarnos.",
        "content2": "Estamos comprometidos con brindar la información más clara y útil para nuestros clientes.",
        "image": "/images/FAQs.jpg",
    }
]
--- 
<section class="faqs-section">
    <div class="container">
        <div class="faqs-content">
            <div class="faqs-text">
                <h2 class="section-title">{data[0].title}</h2>
                <div class="faqs-description">
                    <p>{data[0].content1}</p>
                    <p>{data[0].content2}</p>
                </div>
            </div>
            <div class="faqs-image">
                <img src={data[0].image} alt="CompPro Empresa FAQs">
            </div>
        </div>
    </div>
</section>