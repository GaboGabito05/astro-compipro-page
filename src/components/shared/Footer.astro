---
import '../../styles/Footer.css'
---

<footer class="bg-black text-white py-5">
        <div class="container">
            <!-- Logo y botón -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 text-center">
                <img src="/images/logofooter.webp" alt="Logo Compipro" class="img-fluid"
                    style="max-width: 240px;">
                <button class="btn btn-light fw-bold px-4 py-2 rounded-pill mt-3 mt-md-0">Contáctanos</button>
            </div>

            <!-- Línea divisoria -->
            <hr class="bg-white">

            <!-- Sección de widgets -->
            <div class="row text-center text-md-start">
                <!-- Widget 1: Sobre Compipro -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold">Sobre Compipro</h5>
                    <p class="small">© 2025 COMPIPRO S.A.C. - Soluciones en artículos publicitarios y merchandising
                        empresarial. Creatividad, calidad y puntualidad para potenciar tu marca.</p>
                    <p class="small">Visítanos en <a href="https://compipro.com" target="_blank"
                            class="text-blue text-decoration-underline">compipro.com</a></p>
                    <p class="small">Contacto: ventas@compipro.net</p>
                    <div class="d-flex justify-content-center justify-content-md-start gap-3">
                        <i class="fa-brands fa-facebook fs-3"></i>
                        <i class="fa-brands fa-instagram fs-3"></i>
                        <i class="fa-brands fa-linkedin fs-3"></i>
                        <i class="fa-brands fa-pinterest fs-3"></i>
                    </div>
                </div>

                <!-- Widget 2: Company -->
                <div class="col-md-3 mb-4 footer-seccion">
                    <h5 class="fw-bold">Líneas Principales</h5>
                    <p class="small">
                        <a href="URL1" class="link-item">Línea Madera</a>
                        <a href="URL2" class="link-item">Publicidad Exterior</a>
                        <a href="URL3" class="link-item">Uniformes Corporativos</a>
                        <a href="URL4" class="link-item">Accesorios Tecnológicos</a>
                    </p>
                    
                </div>

                <!-- Widget 3: Help -->
                <div class="col-md-3 mb-4 footer-seccion">
                    <h5 class="fw-bold">Contacto</h5>
                    <p class="small">
                        <a href="URL1" class="link-item">contacto@merchmaster.com</a>
                        <a href="URL2" class="link-item">+51 123 456 789</a>
                        <a href="URL3" class="link-item">Av. Principal 123, Lima</a>
                    </p>
                </div>

                <!-- Widget 4: Resources -->
                <div class="col-md-3 mb-4 footer-seccion">
                    <h5 class="fw-bold">Redes Sociales</h5>
                    <div class="frame-2">
                        <i class="fa-brands fa-facebook"></i>
                        <i class="fa-brands fa-instagram"></i>
                        <i class="fa-brands fa-linkedin"></i>
                        <i class="fa-brands fa-pinterest"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>