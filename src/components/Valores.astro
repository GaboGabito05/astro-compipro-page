<style>
    .card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    position: relative;
    transition: transform 0.3s ease-in-out;
    margin-bottom: 40px;
}

.card:hover {
    transform: scale(1.05);
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}


.card-title {
    font-weight: bold;
    font-size: clamp(1rem, 2vw, 1.4rem);
}

.card-text {
    font-size: clamp(0.8rem, 1.8vw, 1rem);
}

.video-container {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
}

.video-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.custom-overlay,
.striped-overlay,
.orange-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60%;
    z-index: 2;
}

.striped-overlay {
    background: repeating-linear-gradient(45deg,
            rgba(255, 255, 255, 0.6),
            rgba(255, 255, 255, 0.6) 10px,
            transparent 10px,
            transparent 20px);
}



</style>

